    <div class="team-container" id="team-container">
      <!-- Kakanj -->
      <div class="position-group" id="kakanj-group">
        <h2>KAKANJ</h2>
        <% players.filter(player => player.club.toLowerCase().includes('kakanj')).forEach(function(player) { %>
          <div class="player-card">
            <img src="/images/players/<%= player.name %>.jpg" alt="<%= player.name %>">
            <div class="player-info">
              <p><strong>Ime:</strong> <%= formatName(player.name) %></p>
              <p><strong>Datum rođenja:</strong> <%= new Date(player.birthDate).toLocaleDateString() %></p>
              <p><strong>Grad:</strong> <%= formatCity(player.birthPlace) %></p>
            </div>
          </div>
