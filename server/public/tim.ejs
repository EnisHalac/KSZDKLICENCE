<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>NK Čelik Team - <%= category %></title>
  <link href="https://fonts.googleapis.com/css2?family=Anton&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/navbar.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link rel="stylesheet" href="/css/tim.css">
  <link rel="icon" type="image/x-icon" href="/images/logo.png">
</head>
<body>
  <%- include('navbar') -%>

  <div class="wrapper">
    <h1 class="season"><%= category.toUpperCase() %> Sezona: <%= season %></h1>

    <!-- Navigation buttons for the clubs -->
    <div class="navigation-buttons-container">
      <a href="#kengur-group" class="navigation-button">KENGUR</a>
      <a href="#gradina-group" class="navigation-button">GRADINA</a>
      <a href="#maglaj-group" class="navigation-button">MAGLAJ</a>
      <a href="#abeceda-group" class="navigation-button">ABECEDA</a>
      <a href="#celik-group" class="navigation-button">ČELIK</a>
      <a href="#kakanj-group" class="navigation-button">KAKANJ</a>
      <a href="#vukovi-group" class="navigation-button">VUKOVI</a>
      <a href="#visoko-group" class="navigation-button">VISOKO</a>
    </div>

    <!-- Team container to hold players by club -->
    <div class="team-container" id="team-container">
      <!-- Example club: Kakanj -->
      <div class="position-group" id="kakanj-group">
        <h2>KAKANJ</h2>
        <% players.filter(player => player.club === 'KK KAKANJ').forEach(function(player) { %>
          <div class="player-card">
            <img src="<%= player.imageUrl %>" alt="Player Image">
            <p><strong>Ime:</strong> <%= player.name %></p>
            <p><strong>Mesto rođenja:</strong> <%= player.birthPlace %></p>
            <p><strong>Datum rođenja:</strong> <%= new Date(player.birthDate).toLocaleDateString() %></p>
          </div>
        <% }) %>
      </div>

      <!-- Other clubs follow the same structure -->
      <div class="position-group" id="celik-group">
        <h2>Celik</h2>
        <% players.filter(player => player.club === 'OKK Celik Zenica').forEach(function(player) { %>
          <div class="player-card">
            <img src="<%= player.imageUrl %>" alt="Player Image">
            <p><strong>Ime:</strong> <%= player.name %></p>
            <p><strong>Mesto rođenja:</strong> <%= player.birthPlace %></p>
            <p><strong>Datum rođenja:</strong> <%= new Date(player.birthDate).toLocaleDateString() %></p>
          </div>
        <% }) %>
      </div>

      <!-- Add similar blocks for other clubs: Kengur, Maglaj, Abeceda, Čelik, Vukovi, Visoko -->
    </div>
  </div>

  <%- include('footer') -%>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</body>
</html>
